<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="0" android:endColor="#A3A3A3" android:startColor="#A3A3A3" />

            <stroke android:width="1dip" android:color="#A3A3A3" />

            <corners android:radius="1dp" />

            <padding android:bottom="0dp" android:left="10dp" android:right="10dp" android:top="0dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="0" android:endColor="#4285F4" android:startColor="#4285F4" />

            <stroke android:width="1dip" android:color="#4285F4" />

            <corners android:radius="1dip" />

            <padding android:bottom="0dp" android:left="10dp" android:right="10dp" android:top="0dp" />
        </shape></item>

</selector>